<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/round_library_sheet"
    android:id="@+id/library_sheet">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/analog_library"
        android:layout_gravity="center"
        android:layout_marginTop="5dp"
        android:contentDescription="@string/link" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/add_content"
            android:onClick="buttonOpenFile"
            android:layout_marginLeft="15dp"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:background="@drawable/baseline_add_24"
            android:layout_gravity="center"/>

        <ImageView
            android:layout_marginLeft="20dp"
            android:layout_width="48dp"
            android:layout_height="50dp"
            android:background="@drawable/library_logo"
            android:layout_gravity="center"/>

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/roboto_slab_bold"
            android:text="Library"
            android:textColor="#FFFFFF"
            android:textSize="46sp"
            android:gravity="center"
            android:layout_marginLeft="5dp"
            tools:ignore="HardcodedText"
            android:layout_gravity="center"/>

    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/content_items_container"
        android:layout_marginTop="25dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"/>

</LinearLayout>