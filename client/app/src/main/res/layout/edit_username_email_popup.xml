<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center">

    <LinearLayout
        android:id="@+id/editview"
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:orientation="vertical"
        android:background="@drawable/rounded_popup_bg"
        android:gravity="center"
        android:padding="40dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Edit Your Username and Email"
            android:textSize="25sp"
            android:gravity="center"
            android:textColor="@color/white"
            android:fontFamily="sans-serif-medium" />

            <EditText
                android:id="@+id/new_username_text"
                android:layout_width="280dp"
                android:layout_height="50dp"
                android:hint="Username"
                android:textColor="@color/black"
                android:fontFamily="@font/work_sans_medium"
                android:textSize="20sp"
                android:background="@drawable/light_rounded_contentbg"
                android:paddingStart="10dp"
                android:layout_marginTop="20dp"
                android:inputType="text"/>

            <EditText
                android:id="@+id/new_email_text"
                android:layout_width="280dp"
                android:layout_height="50dp"
                android:hint="Email"
                android:textColor="@color/black"
                android:fontFamily="@font/work_sans_medium"
                android:textSize="20sp"
                android:background="@drawable/light_rounded_contentbg"
                android:paddingStart="10dp"
                android:layout_marginTop="15dp"
                android:inputType="textEmailAddress"/>

        <Button
            android:id="@+id/save_edit_btn"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:text="Save Edit"
            android:textColor="@color/white"
            android:fontFamily="@font/work_sans_bold"
            android:textSize="20sp"
            android:layout_marginTop="20dp"
            android:background="@drawable/option_button_bg_black"/>

    </LinearLayout>

</LinearLayout>