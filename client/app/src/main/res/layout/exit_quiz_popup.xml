<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?android:attr/selectableItemBackground"
    android:gravity="center">

    <LinearLayout
        android:id="@+id/exit_popup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/rounded_popup_bg">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_gravity="center"
            android:orientation="vertical"
            android:gravity="center">

            <TextView
                android:id="@+id/quit_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="QUITING ALREADY?"
                android:textColor="#9EB7DD"
                android:fontFamily="@font/roboto_slab"
                android:textSize="34sp"
                android:layout_marginTop="-20dp"/>

        </LinearLayout>

        <ImageView
            android:id="@+id/quit_image"
            android:layout_width="60dp"
            android:layout_height="61dp"
            android:layout_gravity="center"
            android:layout_marginTop="-30dp"
            android:background="@drawable/crying" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/quit_comment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="-25dp"
                android:fontFamily="@font/roboto_slab"
                android:gravity="center"
                android:text="Are you sure you want to quit?\nYour progress won't be saved."
                android:textColor="#C6EFE9"
                android:textSize="20sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:gravity="center"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/yes_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="20dp"
                    android:background="@drawable/nofill_button"
                    android:fontFamily="@font/roboto_slab"
                    android:text="Yes"
                    android:textColor="@color/white"
                    android:textSize="20sp" />

                <Button
                    android:id="@+id/no_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/nofill_button"
                    android:fontFamily="@font/roboto_slab"
                    android:text="No"
                    android:textColor="@color/white"
                    android:textSize="20sp" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>