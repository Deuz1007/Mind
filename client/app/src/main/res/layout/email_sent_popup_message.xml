<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?android:attr/selectableItemBackground"
    android:gravity="center">

    <LinearLayout
        android:id="@+id/exit_popup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/dark_rounded_library">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="78dp"
            android:layout_gravity="center"
            android:background="@color/success_color"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/quit_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="-20dp"
                android:fontFamily="sans-serif-black"
                android:text="EMAIL SENT!"
                android:textColor="#000000"
                android:textSize="30sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/success_comment"
                android:layout_marginTop="-25dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nagka-error Mga Lods"
                android:gravity="center"
                android:textColor="@color/white"
                android:textSize="23sp"/>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>